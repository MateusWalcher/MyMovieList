<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MyMovieList" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#fd4f00</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#0c0c0c</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.MainActivity" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:windowBackground">#0c0c0c</item>
    </style>

    <style name="AppTheme.ActivityFavoritos" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:windowBackground">#0c0c0c</item>
    </style>

</resources>